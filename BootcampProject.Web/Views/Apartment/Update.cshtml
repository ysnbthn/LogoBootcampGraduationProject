@using BootcampProject.Core.DTOs.ApartmentDtos
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create New Apartment";
}
@model UpdateApartmentDto

<div class="row mt-5 mb-5">
    <div class="col-10 offset-1">
        @using (Html.BeginForm("Update", "Apartment", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="card-body">
                    <p class="text-danger">@TempData["CreateError"]</p>

                    <div class="mb-3">
                        @Html.LabelFor(x=>x.ApartmentNumber, "Door Number")
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.ApartmentNumber, new {@class = "form-control", placeholder = "Door Number", type="number"})
                        </div>
                        @Html.ValidationMessageFor(x => x.ApartmentNumber, null, new {@class = "text-danger mb-1"})
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(x=>x.Floor, "Floor Number")
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Floor, new {@class = "form-control", placeholder = "Floor", type="number"})
                        </div>
                        @Html.ValidationMessageFor(x => x.Floor, null, new {@class = "text-danger mb-1"})
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(x=>x.OwnerOrHirerId, "Owner or Hirer")
                        <div class="input-group">
                            @Html.DropDownListFor(x => x.OwnerOrHirerId, (List<SelectListItem>)ViewBag.Users, "Select User", new { @class = "form-control"})
                        </div>
                        @Html.ValidationMessageFor(x => x.OwnerOrHirerId, null, new {@class = "text-danger mb-1"})
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(x=>x.BlockId, "Flat Type")
                        <div class="input-group">
                            @Html.DropDownListFor(x => x.FlatTypeId, new SelectList(ViewBag.FlatTypes, "Id", "Name"), "Select type of apartment", new { @class = "form-control"})
                        </div>
                        @Html.ValidationMessageFor(x => x.FlatTypeId, null, new {@class = "text-danger mb-1"})
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(x=>x.BlockId, "Block")
                        <div class="input-group">
                            @Html.DropDownListFor(x => x.BlockId, new SelectList(ViewBag.Blocks, "Id", "Name"), "Select block of apartment", new { @class = "form-control"})
                        </div>
                        @Html.ValidationMessageFor(x => x.BlockId, null, new {@class = "text-danger mb-1"})
                    </div>

                    <div class="mb-3">
                        <div class="icheck-primary">
                            <label class="mr-2" for="Occupied">
                                    Is occupied? 
                                </label>
                            <select class="form-control" asp-for="Occupied">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            }
    </div>
</div>