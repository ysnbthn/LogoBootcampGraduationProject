@if (User.IsInRole("Admin"))
{
    <div class="collapse navbar-collapse order-3" id="navbarCollapse">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a asp-controller="Home" asp-action="Index" class="nav-link">Homepage</a>
        </li>
        <li class="nav-item">
            <a asp-controller="User" asp-action="Index" class="nav-link">Users</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Apartment" asp-action="Index" class="nav-link">Apartments</a>
        </li>

        <li class="nav-item">
            <a asp-controller="Invoice" asp-action="Index" class="nav-link">Invoices</a>
